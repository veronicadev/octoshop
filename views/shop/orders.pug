extends ./../layouts/shop-layout

block content
    .container.pt-100
        .row
            .col-lg-12
                .row
                    .col-lg-12
                        h1.page__title Orders
                .row
                    if orders.length>0
                        .col-lg-12
                            section.orders
                                ul
                                    each order, index in orders
                                        li # #{index + 1}
                                            each prod in order.items
                                                p #{prod.title} x #{prod.quantity}
                        
                    else
                        .col-lg-12
                            h2 No orders